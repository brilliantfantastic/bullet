<nav class="top-bar">
  <ul class="title-area">
    <li class="logo"></li>
    <li class="name">Bullet</li>
  </ul>

  <section class="top-bar-section">
    <ul class="right">
      <li>Sign out</li>
    </ul>
  </section>
</nav>

<div class="notebook">
  {{#each currentPages itemController="page"}}
    <div class="page">
      <div class="page--title">
        {{#if isTitleReadOnly}}
          {{title}}
        {{else}}
          {{selectable-text-field class="input--chromeless" value=title}}
        {{/if}}
      </div>
      <div class="page--content" {{action "defaultTitle"}}></div>
      <div class="page--footer">
        <div class="page--page-number">{{pageNumber}}</div>
      </div>
    </div>
  {{/each}}
</div>
